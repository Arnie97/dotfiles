#!/bin/bash

user='Arnie97'
branch='master'

function download ()
{
    wget "$1" --no-check-certificate
}

if test "$#" == 0 ; then
    printf "gethub: please provide user/repo/path or url.\n"
    exit 1
fi

for argv in $@; do
    if [[ ${argv::4} == "http" ]]; then
        printf "gethub: got a url.\n"
        download $argv
        continue
    elif [[ ${argv::1} == "/" ]]; then
        printf "gethub: got a private repo.\n"
        argv="$user$argv"
    else
        printf "gethub: got a public repo.\n"
    fi
    file=`echo $argv | sed -e 's/\// /' -e "s/\//\/$branch\//" -e 's/ /\//g'`
    download "https://raw.githubusercontent.com/$file"
done
