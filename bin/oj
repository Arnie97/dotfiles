#!/bin/bash

if [ $# -eq 0 ]; then
    echo "Usage: oj <problem_id> [test_id...]"
    exit 1
fi

p=$1
binary=/tmp/$p
milky "$p.cpp.k" && \
g++ -std=c++14 -Wall -O3 "$p.cpp" -o $binary || exit 2

shift
if [ $# -ge 1 ]; then
    for i in "$@"; do
        test_case="${p}_${i}.in"
        if [ -f $test_case ]; then
            time $binary < $test_case
        else
            echo "oj: '$test_case' not found"
        fi
    done
fi

if [ -f "$p.in" ]; then
    time $binary < "$p.in"
elif [ $# -eq 0 ]; then
    echo "Test input not found, using stdin:"
    time $binary
fi && \
cat "$p.cpp" > /dev/clipboard
