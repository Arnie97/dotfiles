#!/bin/sh
find "$@" -name '*.mp4' -print0 | xargs --null \
./mediainfo --output='General;%Duration%/%FileName%\n' | \
sed 's/\.\///g' | \
awk '
function print_time(h)
{
    ms = h % 1000
    h /= 1000
    s = h % 60
    h /= 60
    m = h % 60
    h /= 60
    printf "%02d:%02d:%02d.%03d", h, m, s, ms, c
}

function print_line()
{
    for (i = 0; i < 80; i++) {
        printf "-"
    }
}

BEGIN {
    FS = "/"
    print "Processing media files, hold on...."
    print_line()
}

NF {
    count += 1
    sum += $1
    print_time($1)
    print "\t", substr($3, 3, 3), substr($4, 5, 2), substr($5, 1, 3), $6
}

END {
    print_line()
    print_time(sum)
    print "\t", count, "files"
}
'
